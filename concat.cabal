-- Initial concat.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                concat
version:             0.1.0.0
synopsis:            Constrained categories
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Conal Elliott
maintainer:          conal@conal.net
-- copyright:           
-- category:            
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     ConCat.Category
                       ConCat.Misc
                       ConCat.Orphans
                       ConCat.Additive
                       ConCat.Semimodule
                       ConCat.Basis
                       ConCat.LMap
                       ConCat.FLMap
                       ConCat.Free.VectorSpace
                       ConCat.Free.LinearCol
                       ConCat.Free.LinearRow
                       ConCat.ShowUtils
                       ConCat.Lambda
                       ConCat.Entail
                       ConCat.Complex
                       ConCat.Rep
                       ConCat.Circuit
                       ConCat.Simplify
                       ConCat.BuildDictionary
                       ConCat.Plugin

  include-dirs: src/ConCat
  install-includes:    AbsTy.inc

  build-depends:       MemoTrie >= 0.6.5
                     , QuickCheck >= 2.8.2
                     , Stream
                     , base >=4.9 && <4.10
                     , constraints >= 0.8
                     , containers >= 0.5.7.1
                     , ghc-prim >= 0.5.0.0
                     , keys >= 3.11
                     , newtype-generics
                     , pointed >= 5
                     , transformers >= 0.5.2.0
                     , vector-space >= 0.10.4
                     -- For Plugin
                     , ghc >= 8.0.1
                     , syb >= 0.6
                     -- For Circuit, to be moved to another project
                     , directory >= 1.2.6.2
                     , process >= 1.4.2.0
                     , mtl >= 2.2.1
                     , hermit >= 1.0.0.1

--                      , dependent-map

-- I only use hermit for initTcFromModGuts. To do: drop the dependency.

  hs-source-dirs:      src
  default-language:    Haskell2010

  -- other-modules:       
  -- other-extensions:    

Test-Suite basic
  type:             detailed-0.9
  default-language: Haskell98
  hs-Source-Dirs:   test
  test-module:      Basic
  Build-Depends:    Cabal >= 1.24.0.0
                  , base<5
                  , concat
  ghc-options:      -O2 -fforce-recomp
--                     -ddump-simpl
--                     -ddump-rule-rewrites
--                     -ddump-rule-firings

--                     -dverbose-core2core
--                     -ddump-simpl-iterations
--                     -dshow-passes


